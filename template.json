{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"diskName": {
			"value": "QA_BOTs_Storage_Blue-Prism"
		},
		"location": {
			"value": "canadaeast"
		},
		"sku": {
			"value": "StandarSSD_LRS"
		},
		"diskSizeGb": {
			"value": "128"
		},
		"osType": {
			"value": ""
		},
		"sourceUri": {
			"value": ""
		},
		"sourceResourceId": {
			"value": ""
		},
		"createOption": {
			"value": "empty"
		}
	},
	"resources": [{
		"type": "Microsoft.Compute/disks",
		"apiVersion": "2018-06-01",
		"name": "[concat(variables('vmName'),'-datadisk1')]",
		"location": "[resourceGroup().location]",
		"sku": {
			"name": "StandarSSD_LRS"
		},
		"copy": {
			"name": "diskcopy",
			"count": 4,
			"mode": "serial",
			"batchSize": 2
		},
		"properties": {
			"creationData": {
				"createOption": "Empty"
			},
			"diskSizeGB": 128
		}

	}]
}
